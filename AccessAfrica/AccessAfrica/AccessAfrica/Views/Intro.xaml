<?xml version="1.0" encoding="utf-8" ?>
<ContentPage NavigationPage.HasNavigationBar="False"
    xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="AccessAfrica.Views.Intro">
    <StackLayout Orientation="Vertical" VerticalOptions="Fill" HorizontalOptions="Fill">
        <Grid>
            <Image Aspect="AspectFill" Source="Intro.png" VerticalOptions="Fill" HorizontalOptions="Fill"/>
            <Grid VerticalOptions="Center" HorizontalOptions="Center" Padding="0,0,40,0">
                <Image Aspect="AspectFit" x:Name="imageScale" />
            </Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>
        </Grid>
    </StackLayout>
</ContentPage>